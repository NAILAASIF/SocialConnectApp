<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- App Logo and Name -->
        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="58dp"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/parking_7707972" />

            <TextView
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/agbalumo"
                android:text="@string/pipel2"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Carousel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="24dp" />

        <!-- Dots -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabDots"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/black" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/calistoga"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/best_social_app_to_make_new_friends"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/alkatra_semibold"
            android:gravity="center"
            android:text="@string/with_pipel_you_will_find_new_friends_from_various_countries_and_regions_of_the_world"
            android:textColor="#5D5C5C"
            android:textSize="17sp" />

        <!-- Get Started Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/GoBtn"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_gradient"
            android:fontFamily="@font/agbalumo"
            android:text="@string/get_started"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="@null" />

    </LinearLayout>
</ScrollView>
